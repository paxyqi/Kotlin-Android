<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Hello My Hunni"
            android:textSize="23dp"
            android:textColor="@color/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.5"
            android:id="@+id/textView" android:layout_marginTop="29dp" app:layout_constraintBottom_toTopOf="@+id/img1"/>

    <ImageView
            android:layout_width="411dp"
            android:layout_height="0dp" app:srcCompat="@drawable/myhunni"
            android:id="@+id/img1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="89dp" android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/mainBut"/>
    <Button
            android:text="Click Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainBut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/textDate"/>
    <TextView
            android:text=""
            android:layout_width="204dp"
            android:layout_height="32dp"
            android:textSize="25dp"
            android:textColor="@color/love"
            android:id="@+id/textDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainBut" android:layout_marginBottom="78dp"
            app:layout_constraintBottom_toTopOf="@+id/rateStar"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateStar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textDate"
            android:layout_marginBottom="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>